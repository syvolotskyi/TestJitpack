<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SPRadioButtonBase" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/h700_medium_caps_label_secondary</item>
        <item name="hasDescription">false</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:button">@drawable/selector_radio_button</item>
        <item name="android:buttonTint">?attr/brand_primary</item>
    </style>

    <style name="SPRadioButton.Description" parent="SPRadioButtonBase">
        <item name="android:textAppearance">@style/h700_bold_caps_secondary</item>
        <item name="descriptionTextAppearance">@style/h800_medium_label_secondary</item>
        <item name="hasDescription">true</item>
    </style>
</resources>