    <style name="SPCoreTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/static_black</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="AppTheme" parent="SPCoreTheme">
        <item name="colorPrimary">?attr/static_black</item>
        <item name="colorPrimaryDark">?attr/static_black</item>
        <item name="colorAccent">?attr/brand_primary</item>
        <item name="android:windowBackground">?attr/static_black</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

