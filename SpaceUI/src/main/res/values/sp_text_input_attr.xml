<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SPEditTextMasked">
        <attr name="style" />
        <attr name="mask" format="string" />
    </declare-styleable>

    <declare-styleable name="SPTextFieldBaseView">
        <attr name="style" />
        <attr name="android:text" format="string|reference" />
        <attr name="android:imeOptions" format="reference" />
        <attr name="android:hint" format="string|reference" />
        <attr name="textAppearance" />
        <attr name="descriptionTextAppearance" />
        <attr name="labelTextAppearance" format="reference" />
        <attr name="titleText" format="string|reference" />
        <attr name="descriptionText" format="string|reference" />
        <attr name="inputMandatory" format="boolean" />
        <attr name="inputTextLength" format="integer" />

        <attr name="endViewText" format="string|reference"/>
        <attr name="startViewText" format="string|reference"/>

        <attr name="endView" format="enum">
            <enum name="none" value="0" />
            <enum name="removeIcon" value="1" />
            <enum name="primaryChip" value="2" />
            <enum name="currency" value="3" />
        </attr>

        <attr name="startView" format="enum">
            <enum name="none" value="0" />
            <enum name="primaryChip" value="1" />
            <enum name="phone_prefix" value="2" />
        </attr>

        <attr name="contentInputView" format="enum">
            <enum name="text" value="0" />
            <enum name="date_mask" value="1" />
            <enum name="number" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SPTextFieldDropdown">
        <attr name="inflateType" format="enum">
            <enum name="none" value="0" />
            <enum name="withIcon" value="1" />
        </attr>
    </declare-styleable>

</resources>