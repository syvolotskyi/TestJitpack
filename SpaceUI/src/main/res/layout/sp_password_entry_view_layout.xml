<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/buttonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="@dimen/ui_dimen_p_8"
        android:layout_marginEnd="@dimen/ui_dimen_p_8"
        tools:text="Title" />

    <ge.space.ui.components.text_fields.masked.password.SPPasswordEditText
        android:id="@+id/pinEntryEditText"
        style="@style/SPPinEntryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/ui_dimen_p_16"
        android:background="@null"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/ui_dimen_p_8"
        android:gravity="center"
        android:focusable="true"
        android:maxLines="1"
        android:imeOptions="actionNone"/>

    <TextView
        android:id="@+id/labelDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/ui_dimen_p_8"
        android:layout_marginEnd="@dimen/ui_dimen_p_8"
        tools:text="Title" />
</LinearLayout>