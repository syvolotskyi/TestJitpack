<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_p_16">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/toggleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/dimen_p_16"
        android:layout_marginEnd="@dimen/dimen_p_16"
        android:thumb="@drawable/switch_thumb"
        app:track="@drawable/switch_track_selector" />

    <CheckBox
        android:id="@+id/cbDisable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SPCheckbox.DefaultStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_p_32"
        android:text="@string/disable" />

    <ge.space.ui.components.controls.SPToggleSwitch
        android:id="@+id/toggleSwitch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_p_16"
        android:layout_marginStart="@dimen/dimen_p_16"
        android:layout_marginEnd="@dimen/dimen_p_16"
        style="@style/SPToggleSwitch.Root" />

    <CheckBox
        android:id="@+id/cbDisable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SPCheckbox.DefaultStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_p_32"
        android:text="@string/disable" />

    <ge.space.ui.components.controls.SPToggleSwitch
        android:id="@+id/toggleSwitch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_p_16"
        android:layout_marginStart="@dimen/dimen_p_16"
        android:layout_marginEnd="@dimen/dimen_p_16"
        style="@style/SPToggleSwitch.SmallTrack" />

    <CheckBox
        android:id="@+id/cbDisable3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SPCheckbox.DefaultStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_p_32"
        android:text="@string/disable" />

</LinearLayout>